<%- include ('../partials/header') %> <%- include ('../partials/loggedInMenu') %>

<main>
    <div class="container">

        <h1>Drafting</h1>

        <table class="table">
            <tbody>
              <tr>
                <th scope="col">Player Name</th>
                <th scope="col">Position</th>
                <th scope="col"></th>
              </tr>
              <% players.forEach(player => { %>
              <tr>
                <td><%=players.player_name%></td>
                <td><%=player.position%></td>
                <td>
                    <form action = '/team/add/' method = 'POST'>
                        <button type="submit" class="btn btn-primary">Add to Team</button>
                    </form>
                </td>
              </tr>             
              <%});%>
            </tbody>
          </table>       
      </div>
</main>

<%- include ('../partials/footer') %>