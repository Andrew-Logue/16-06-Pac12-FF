<%- include ('../partials/header') %> <%- include ('../partials/loggedInMenu') %>

<main>
  
  <head>
    <link rel="stylesheet" href="../resources/css/styles.css">
    <script src="script.js" defer></script>
    <title>Drafting</title>
  </head>

    <div class="container">

        

        <div class="col">
          <h1 style="text-align: center">Draft</h1>
        <table class="table">
          
          <thead>
            <div class="search-wrapper">
              <label for="search">Search Players</label>
              <input type="search" id="search" data-search>
            </div>
          </thead>

            <tbody>
              <tr>
                <div class="player-cards" data-player-cards-container></div>
              <template data-user-template>
                <div class="card">
                  <div class="header" data-header></div>
                  <div class="body" data-body></div>
              </div>
              </tr>
              <% team.forEach(player => { %>
              <tr>
                <td><%=team.player%></td>
                <td><%=player.position%></td>
                <td>
                    <form action = '/team/add/' method = 'POST'>
                        <button type="submit" class="btn btn-primary">Add to Team</button>
                    </form>
                </td>
              </tr>             
              <%});%>
            </tbody>
          </table>

          <div class="col">
            <h1 style="text-align: center">"My team"</h1>
          <table class="table">
            <tbody>
              <tr>
                <th scope="col">Player</th>
                <th scope="col">Position</th>
                
              </tr>
              <% team.forEach(player => { %>
              <tr>
                  <td><%=team.player%></td>
                  <td><%=player.position%></td>
              </tr>             
              <%});%>
            </tbody>
          </table>
          
      </div>
</main>

<%- include ('../partials/footer') %>