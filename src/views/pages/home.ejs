<%- include ('../partials/header') %> <%- include ('../partials/menu') %>
<main>
  <head>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>Pac-12 FF Home</title>
  </head>
  <body>
    <%- include ('../partials/message') %>
    <div style="padding: 40px" class="container">
      <div class="row">
        <div class="col">
          <h1 style="text-align: center">Recent Highlights</h1>

          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-ride="carousel"
          >
            <ol class="carousel-indicators">
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
              ></li>
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="1"
              ></li>
              <li
                data-target="#carouselExampleIndicators"
                data-slide-to="2"
              ></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe
                    class="embed-responsive-item"
                    width="560"
                    height="315"
                    src="https://www.youtube.com/embed?listType=playlist&list=UUtxdtF8iCxZw593FSUIPrxg"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>
              <div class="carousel-item">
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe
                    class="embed-responsive-item"
                    width="560"
                    height="315"
                    src="https://www.youtube.com/embed?listType=playlist&list=UUtxdtF8iCxZw593FSUIPrxg&index=2"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>
              <div class="carousel-item">
                <div class="embed-responsive embed-responsive-16by9">
                  <iframe
                    class="embed-responsive-item"
                    width="560"
                    height="315"
                    src="https://www.youtube.com/embed?listType=playlist&list=UUtxdtF8iCxZw593FSUIPrxg&index=3"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                  ></iframe>
                </div>
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleIndicators"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
        <div class="col">
          <h1 style="text-align: center">Top Fantasy Teams</h1>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Team Name</th>
                <th scope="col">Points</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < 5; i++){ %>
                <tr>
                  <th scope="row"><%= i +1 %></th>
                  <td><%= topTeams[i].team_name %></td>
                  <td><%= topTeams[i].team_score %> </td>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="container">
      <h4 style="text-align: center">Upcomming Games</h4>
      <table class="table">
        <tbody>
          <tr>
            <td>CU Boulder @ LSU</td>
            <td>11-27-2021</td>
            <td>6:00</td>
          </tr>
          <tr>
            <td>CU Boulder @ U</td>
            <td>11-27-2021</td>
            <td>6:00</td>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</main>

<%- include ('../partials/footer') %>